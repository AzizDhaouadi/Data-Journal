---
import {type CollectionEntry} from "astro:content"
import {Image} from "astro:assets"

type Props = {
    post: CollectionEntry<"posts">
}

const {post} = Astro.props;
---

<article>
    <a
        href={`/${post.slug}/`}
        aria-label={`Read more about ${post.data.title}`}
    >
        <Image
            src={post.data.image}
            alt={post.data.title}
            width={450}
            height={450 / 1.5}
            format="webp"
            class="rounded-2xl shadow-xl mb-6 aspect-thumbnail object-cove"
        />
    </a>

    <a
        href={`/${post.slug}/`}
        class="text-2xl text-zinc-900 mb-4 font-semibold inline-block hover:text-teal-800"
    >
        {post.data.title}
    </a>

    <p class="text-zinc-500 text-1xl mb-9">{post.data.date}</p>

    <p class="prose text-zinc-500 text-1xl mb-9 line-clamp-3 text-wrap">
        {post.body}
    </p>
</article>